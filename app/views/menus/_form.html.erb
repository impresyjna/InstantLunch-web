<div class="col-md-12">
  <%= form_for @menu do |f| %>
      <%= render 'shared/error_messages', object: f.object %>


      <%= f.select :restaurant_id, options_for_select(@restaurants, @menu.restaurant_id), {:include_blank => "Restauracja"}, {:class => "form-control"} %>

      <%= f.submit "Zapisz", :class => "btn btn-danger btn-lg btn-block" %>

  <% end %>
</div>