<tr>
  <td><%= restaurant.name %></td>
  <td><%= restaurant.street %></td>
  <td><%= restaurant.house_number %></td>
  <td><%= restaurant.apartment_number %></td>
  <td><%= restaurant.post_code %></td>
  <td><%= restaurant.city %></td>
  <td>
    <% if restaurant.active %>
        <img src="http://www.vi-decals.com/ocart/image/correct.png" width="25" height="25">
    <% else %>
        <img src="http://www.ratedartisan.com/images/delete1.png" width="25" height="25">
    <% end %>
  </td>
  <td>
    <%= link_to "<i class='fa fa-eye fa-2x'></i>".html_safe, restaurant %>
    <%= link_to "<i class='fa fa-pencil fa-2x'></i>".html_safe, edit_restaurant_path(restaurant) %>
    <%= link_to "<i class='fa fa-trash fa-2x'></i>".html_safe, restaurant, method: :delete,
        data: { confirm: "Czy jesteś pewien, że chcesz usunąć restaurację?" } %>
  </td>
</tr>