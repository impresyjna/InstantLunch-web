<div class="row">
  <!-- Page Header -->
  <div class="col-lg-12">
    <h1 class="page-header">Lista restauracji</h1>
  </div>
  <!--End Page Header -->
</div>

<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Nazwa</th>
          <th>Ulica</th>
          <th>Numer domu</th>
          <th>Numer lokalu</th>
          <th>Kod pocztowy</th>
          <th>Miasto</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @restaurants.each do |restaurant| %>
            <%= render 'actual_index', restaurant: restaurant %>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
