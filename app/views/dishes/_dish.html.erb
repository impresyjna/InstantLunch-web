<tr>
  <td><%= dish.name %></td>
  <td><%= dish.price %></td>
  <td><%= dish.dish_category.name %></td>
  <td>
    <% if dish.active %>
        <img src="http://www.vi-decals.com/ocart/image/correct.png" width="25" height="25">
    <% else %>
        <img src="http://www.ratedartisan.com/images/delete1.png" width="25" height="25">
    <% end %>
  </td>
  <td class="table_buttons">
    <%= link_to "<i class='fa fa-pencil fa-2x'></i>".html_safe, edit_dish_path(dish) %>
    <%= link_to "<i class='fa fa-trash fa-2x'></i>".html_safe, dish, method: :delete,
                data: { confirm: "Czy jesteś pewien, że chcesz zmienić danie na niedostępne?" } %>
  </td>
</tr>